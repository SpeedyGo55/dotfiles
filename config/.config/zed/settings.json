// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "disable_ai": true,
  "agent": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    },
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    },
    "model_parameters": []
  },
  "ssh_connections": [
    {
      "host": "speedygo55.duckdns.org",
      "projects": [
        {
          "paths": ["/home/speedygo55/projects/pidash"]
        }
      ]
    }
  ],
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Ayu Dark"
  },
  "terminal": {
    "shell": {
      "program": "fish"
    }
  },
  "autosave": "on_focus_change"
}
